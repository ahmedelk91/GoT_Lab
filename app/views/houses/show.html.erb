<h2><%= link_to "Houses", houses_path %></h2>

<p>
  <strong> Name: </strong>
  <%= @house.name %>
</p>

<p>
  <strong> Description: </strong>
  <%= @house.description %>
</p>

<img src="<%= @house.img_url %>">

<h2>Add a character:</h2>
<%= form_for([@house, @house.characters.build]) do |f| %>
<p>
  <%= f.label :name %> <br>
  <%= f.text_field :name %>
</p>

<p>
  <%= f.label :description %> <br>
  <%= f.text_field :description %>
</p>

<p>
  <%= f.label :img_url %> <br>
  <%= f.text_field :img_url %>
</p>

<p>
  <%= f.submit %>
</p>
<% end %>

<p><%= link_to 'Edit', edit_house_path(@house) %></p>
<p><%= link_to 'Back', houses_path %>
